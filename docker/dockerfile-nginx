################################################################################
# Base image
################################################################################

FROM nginx:alpine

################################################################################
# Cleaning configuration files
################################################################################

RUN rm -f /etc/nginx/conf.d/*

################################################################################
# Add configuration files
################################################################################

COPY conf/nginx/nginx.conf /etc/nginx/
COPY conf/nginx/conf.d/ /etc/nginx/conf.d/

################################################################################
# Entrypoint
################################################################################

ENTRYPOINT ["nginx"]